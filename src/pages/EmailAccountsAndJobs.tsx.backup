                    <FileText className="mr-2 h-4 w-4" />
                    Copy to Clipboard
                  </Button>
                  <Button 
                    variant="outline" 
                    size="sm"
                    onClick={() => {
                      const blob = new Blob([selectedJobResults.results.join(',')], { type: 'text/plain' });
                      const url = URL.createObjectURL(blob);
                      const a = document.createElement('a');
                      a.href = url;
                      a.download = `${selectedJobName.replace(/[^a-z0-9]/gi, '_').toLowerCase()}_emails.txt`;
                      document.body.appendChild(a);
                      a.click();
                      document.body.removeChild(a);
                      URL.revokeObjectURL(url);
                      toast.success('Email addresses downloaded!');
                    }}
                  >
                    <Download className="mr-2 h-4 w-4" />
                    Download as TXT
                  </Button>
                </div>
              </div>
            ) : (
              <div className="text-center text-muted-foreground py-8">
                No email addresses found.
              </div>
            )}
          </div>
        </DialogContent>
      </Dialog>

      {/* Folder Selection Modal */}
      {selectedAccountId && (
        <FolderSelectionModal
          accountId={selectedAccountId}
          onOpenChange={(isOpen) => {
            if (!isOpen) {
              setSelectedAccountId(null);
            }
          }}
          onSyncStarted={(syncJobId) => setCurrentSyncJobId(syncJobId)}
        />
      )}
    </div>
  );
