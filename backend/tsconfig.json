{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "express", "ws"],
    "lib": ["es2020", "dom"]
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/node_modules",
    "**/node_modules/**"
  ]
}
